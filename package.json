{
  "name": "@bojanrajkovic/containerfile-ts",
  "version": "2.0.0",
  "description": "Type-safe Dockerfile/Containerfile generation with declarative TypeScript",
  "keywords": [
    "container",
    "containerfile",
    "docker",
    "dockerfile",
    "type-safe",
    "typescript"
  ],
  "license": "MIT",
  "author": "Bojan Rajkovic",
  "repository": {
    "type": "git",
    "url": "https://github.com/bojanrajkovic/containerfile-ts.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "prepare": "husky",
    "changeset": "changeset",
    "changeset-version": "changeset version",
    "release": "pnpm build && pnpm publish --access public --no-git-checks"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.47",
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "conventional-commits-parser": "6.2.1",
    "fast-check": "4.5.3",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxfmt": "0.32.0",
    "oxlint": "1.47.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "lint-staged": {
    "*.ts": [
      "oxlint --fix"
    ],
    "*.md": [
      "oxfmt --write"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
